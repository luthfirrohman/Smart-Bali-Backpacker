<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="#00FFFFFF"
    app:cardElevation="1dp"
    android:layout_marginTop="-4dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_chat_user_photo"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_margin="16dp"
            android:background="@drawable/pura"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/tv_chat_user_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins"
            android:text="Hallo"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="5dp"
            app:layout_constraintStart_toEndOf="@+id/iv_chat_user_photo"
            app:layout_constraintTop_toTopOf="@+id/iv_chat_user_photo" />

        <TextView
            android:id="@+id/tv_chat_user_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Text"
            android:layout_marginLeft="16dp"
            android:fontFamily="@font/poppins_light"
            app:layout_constraintBottom_toBottomOf="@+id/iv_chat_user_photo"
            app:layout_constraintStart_toEndOf="@+id/iv_chat_user_photo" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>